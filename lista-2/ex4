#include <stdio.h>

int main() {
    int idade, peso;
    
        printf("Qual sua idade?\n");
            scanf("%d",  &idade);
            
        printf("Qual seu peso?\n");
            scanf("%d", &peso);
            
        if (idade >= 18 && idade <= 67 && peso >= 50){
            
            printf("Autorizado a doar sangue!\n");
            
        }else{
            
            printf("Nao autorizado a doar sangue!\n");
            
        }
}